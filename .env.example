# =====================================================
# INSAPP V3 - Environment Configuration Template
# =====================================================
# Copy this file to .env and fill in your actual values
# =====================================================

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/insapp_v3"

# Instagram API Configuration
INSTAGRAM_APP_ID="your_instagram_app_id"
INSTAGRAM_APP_SECRET="your_instagram_app_secret"
INSTAGRAM_ACCESS_TOKEN="your_instagram_access_token"
INSTAGRAM_BUSINESS_ACCOUNT_ID="your_business_account_id"
INSTAGRAM_API_VERSION="v23.0"
INSTAGRAM_BASE_URL="https://graph.instagram.com"

# WhatsApp Business API Configuration
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"
WHATSAPP_ACCESS_TOKEN="your_whatsapp_access_token"
WHATSAPP_VERIFY_TOKEN="your_verify_token"

# Authentication Configuration
NEXTAUTH_SECRET="your_nextauth_secret_key_here"
NEXTAUTH_URL="http://localhost:3000"

# Application Configuration
NODE_ENV="development"

# Webhook Configuration (Optional)
MESSENGER_VERIFY_TOKEN="your_messenger_verify_token"
APP_SECRET="your_app_secret_for_webhook_verification"

# JWT Configuration
JWT_SECRET="your_jwt_secret_key_for_authentication"

# =====================================================
# SETUP INSTRUCTIONS:
# =====================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API credentials
# 3. Create MySQL database: CREATE DATABASE insapp_v3;
# 4. Import schema: mysql -u root -p insapp_v3 < database-schema.sql
# 5. Run: npm install && npm run dev
# =====================================================
